<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/girl_item">

    <androidx.cardview.widget.CardView
        android:id="@+id/girls_item_cv"
        android:layout_width="150dp"
        android:layout_height="200dp"
        app:cardBackgroundColor="@color/girl_background_color"
        app:cardCornerRadius="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgGirl"
            android:layout_width="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_height="wrap_content"
            android:src="@drawable/girl1"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_favorite"
            android:layout_gravity="bottom"
            android:backgroundTint="@color/heart_red"
            android:layout_marginBottom="40dp"
            android:layout_marginStart="10dp"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/tvGirlDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Belt suit blazer"
        app:layout_constraintTop_toBottomOf="@id/girls_item_cv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/text_color"/>
    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="120$"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvGirlDesc"
        app:layout_constraintStart_toStartOf="@id/tvGirlDesc"/>

</androidx.constraintlayout.widget.ConstraintLayout>